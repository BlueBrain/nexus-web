{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": false,
    "baseUrl": "server",
    "outDir": "dist/server",
    "noEmit": false,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "src/**/*.(test|spec).ts*",
    "src/**/*.stories.ts*",
    "dist/"
  ],
  "include": ["server/**/*.ts"]
}
