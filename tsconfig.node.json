{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2022",
    "moduleDetection": "force",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": false,
    "baseUrl": "server",
    "outDir": "dist/server",
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "noEmit": true,
    "lib": ["es2022"]
  },
  "exclude": ["node_modules", "src/**/*", "dist/"],
  "include": ["server/**/*.ts"]
}
