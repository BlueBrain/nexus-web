{
  "globals": {
    "vi": true
  },
  "defaultSeverity": "error",
  "extends": [
    "tslint-config-airbnb",
    "tslint-config-prettier",
    "tslint-react-hooks"
  ],
  "jsRules": {},
  "rules": {
    "import-name": [
      false,
      {
        "react": "React",
        "react-dom": "ReactDOM",
        "react-helmet": "Helmet"
      }
    ],
    "variable-name": [true, "allow-pascal-case", "allow-leading-underscore"],
    "no-parameter-reassignment": false
  },
  "linterOptions": {
    "exclude": ["src/__mocks__/**/*.js", "./init.js"]
  }
}
