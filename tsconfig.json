{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "lib": ["dom", "esnext", "ES2020", "dom.iterable"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "testUtil": ["./utils/testUtil"]
    },
    /* Linting */
    // "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "server"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "files": ["custom.d.ts"],
  "exclude": [
    "node_modules",
    "src/**/*.(test|spec).ts*",
    "src/**/*.stories.ts*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "errorsAsWarnings": true
  },
  "types": ["vite/client"]
}
