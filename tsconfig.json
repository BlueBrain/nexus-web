{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "lib": ["dom", "esnext", "ES2020", "dom.iterable"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "testUtil": ["./utils/testUtil"],
      "@/*": ["./src/*"],
      "pages/*": ["./src/pages/*"],
      "shared/*": ["./src/shared/*"],
      "components/*": ["./src/shared/components/*"],
      "molecules/*": ["./src/shared/molecules/*"],
      "modals/*": ["./src/shared/modals/*"],
      "hooks/*": ["./src/shared/hooks/*"],
      "server/*": ["./server/*"]
    },
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "server"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "files": ["custom.d.ts"],
  "exclude": [
    "node_modules",
    "src/**/*.(test|spec).ts*",
    "src/**/*.stories.ts*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "errorsAsWarnings": true
  },
  "types": ["vite/client", "vitest/globals", "vitest-dom/extend-expect"]
}
