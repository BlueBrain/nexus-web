{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "lib": ["dom", "esnext", "ES2020", "dom.iterable"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "testUtil": ["./utils/testUtil"],
      "pages/*": ["./pages/*"],
      "shared/*": ["./shared/*"],
      "components/*": ["./shared/components/*"],
      "molecules/*": ["./shared/molecules/*"],
      "modals/*": ["./shared/modals/*"],
      "hooks/*": ["./shared/hooks/*"],
      "server/*": ["./server/*"],
      "@/*": ["./src/*"]
    },
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*"],
  "files": ["custom.d.ts"],
  "exclude": [
    "node_modules",
    "src/**/*.(test|spec).ts*",
    "src/**/*.stories.ts*",
    "cypress.config.ts",
    "cypress"
  ],
  "awesomeTypescriptLoaderOptions": {
    "errorsAsWarnings": true
  },
  "types": ["vite/client", "vitest/globals", "vitest-dom/extend-expect"]
}
